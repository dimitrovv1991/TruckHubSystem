@model ICollection<TruckDetailsViewModel>
@{
    ViewBag.Title = "Select a truck";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var truck in Model.Where(t=>t.Available==true))
    {
        <div class="card col-4" style="width: 20rem;">
            <img src="@truck.ImageUrl" class="card-img-top" alt="Truck Image">
            <div class="card-body">
                <h4 class="card-title mt-1">@truck.Manufacturer @truck.Model</h4>
                <h5 class="card-title mt-1">License Plate: @truck.LicensePlate</h5>
                <p class="mb-0"><span class="fw-bold">Capacity: </span>@truck.CapacityKg Kg</p>
                <p class="mb-0"><span class="fw-bold">Available: </span>@(truck.Available ? "Yes" : "No")</p>
            </div>
            <form asp-action="SelectTruck" method="post">
                <input type="hidden" name="selectedTruckId" value="@truck.Id" />
                <button type="submit">Select</button>
            </form>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}